<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lab 1 - Android Studio"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnCalculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calculator"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/camera"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnRandomNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/random_number"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnDiceRoller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dice_roller"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnCallSms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/call_sms"/>

</LinearLayout>
